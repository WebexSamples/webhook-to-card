{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": 
      [{
        "type": "TextBlock",
        "text": "Rocket Launch Successful!",
        "weight": "Bolder",
        "size": "Large",
        "color": "Accent",
        "wrap": true
      },
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "width": "auto",
            "items": [
              {
                "type": "Image",
                "url": "https://example.com/mission_patch.png",
                "size": "Small",
                "style": "Person"
              }
            ]
          },
          {
            "type": "Column",
            "width": "stretch",
            "items": [
              {
                "type": "TextBlock",
                "text": "Rocket Launch Details",
                "weight": "Bolder",
                "wrap": true
              },
              {
                "type": "FactSet",
                "facts": [
                  {
                    "title": "Rocket Name",
                    "value": "Falcon 9"
                  },
                  {
                    "title": "Payload Type",
                    "value": "Satellite"
                  },
                  {
                    "title": "Payload Description",
                    "value": "Communications satellite for commercial use"
                  },
                  {
                    "title": "Launch Time",
                    "value": "2023-03-25T16:30:00Z"
                  },
                  {
                    "title": "Launch Site",
                    "value": "Cape Canaveral, FL"
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "type": "Action.OpenUrl",
        "title": "Watch the Launch",
        "url": "https://example.com/live_stream.mp4"
      }
    ]
  }
  